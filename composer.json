{
    "name": "laymont/hexagonal-architecture",
    "description": "Paquete para implementar arquitectura hexagonal en laravel",
    "authors": [
        {
            "name": "Laymont Arratia",
            "email": "laymont@gmail.com"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Laymont\\HexagonalArchitecture\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laymont\\HexagonalArchitecture\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Laymont\\HexagonalArchitecture\\Providers\\HexagonalServiceProvider"
            ]
        }
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^v3.2",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.12",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
